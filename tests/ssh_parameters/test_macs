#
# MACs
#
# Allowed MACs:
# hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,
# hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,
# hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com
#
source ../lib_test

test_macs_different_from_allowed_ones_on_any_host_is_reported() {
  cat << __EOF__ >"${FAKE_BAD_CONFIG}"
Host hostname.com
  MACs weak-mac
Host *
  MACs weak-mac
__EOF__

  ${MAIN} ${FAKE_BAD_CONFIG} > ${RESULT}

  expected_warning_message="WARNING: MACs should be set to 'hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com'"
  expected_error_message="ERROR: MACs should be set to 'hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com'"

  assert 'grep "$expected_warning_message" ${RESULT}'
  assert 'grep "$expected_error_message" ${RESULT}'
}

test_missing_macs_on_any_host_is_reported() {
  cat << __EOF__ >"${FAKE_BAD_CONFIG}"
Host hostname.com
  MACs ssh-ed25519-cert-v01@openssh.com
Host *
  MACs ssh-ed25519-cert-v01@openssh.com
__EOF__

  ${MAIN} ${FAKE_BAD_CONFIG} > ${RESULT}

  expected_warning_message="WARNING: MACs should be set to 'hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com'"
  expected_error_message="ERROR: MACs should be set to 'hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com'"

  assert 'grep "$expected_warning_message" ${RESULT}'
  assert 'grep "$expected_error_message" ${RESULT}'
}

test_macs_in_wrong_order_on_any_host_is_reported() {
  cat << __EOF__ >"${FAKE_BAD_CONFIG}"
Host hostname.com
  MACs ssh-ed25519,ssh-rsa,ssh-ed25519-cert-v01@openssh.com,ssh-rsa-cert-v01@openssh.com
Host *
  MACs ssh-ed25519,ssh-rsa,ssh-ed25519-cert-v01@openssh.com,ssh-rsa-cert-v01@openssh.com
__EOF__

  ${MAIN} ${FAKE_BAD_CONFIG} > ${RESULT}

  expected_warning_message="WARNING: MACs should be set to 'hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com'"
  expected_error_message="ERROR: MACs should be set to 'hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com'"

  assert 'grep "$expected_warning_message" ${RESULT}'
  assert 'grep "$expected_error_message" ${RESULT}'
}

test_missing_macs_statement_on_star_host_returns_an_error() {
  cat << __EOF__ >"${FAKE_BAD_CONFIG}"
Host *
  Username yoloer
__EOF__

  ${MAIN} ${FAKE_BAD_CONFIG} > ${RESULT}

  expected_message="ERROR: MACs is missing"

  assert 'grep "$expected_message" ${RESULT}'
}
